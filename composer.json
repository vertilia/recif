{
    "name": "vertilia/recif",
    "description": "Code generator for rule engines",
    "license": "BSD-2-Clause",
    "type": "library",

    "autoload": {
        "psr-4": {
            "Recif\\": "src/"
        }
    },
    "archive": {
        "exclude": [
            "/tests"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "7.4"
        }
    },
    "require": {
        "php": "^7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
